@model MusicWeb.Models.Song

@{
    ViewBag.Title = "Details";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            margin: 0;
            padding: 0;
        }

        h2, h4 {
            text-align: center;
            color: #343a40;
        }

        .details-container {
            background: #ffffff;
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 30px auto;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        dt, dd {
            width: 70%;
            margin: 0;
            padding: 8px 0;
        }

        dt {
            font-weight: bold;
            color: #495057;
        }

        dd {
            color: #6c757d;
        }

        p {
            text-align: center;
            margin-top: 20px;
        }

        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            margin: 0 10px;
        }

            a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h2>Song Details</h2>

    <div class="details-container">
        <h4>Song Information</h4>
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.SongName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SongName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FilePath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FilePath)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImagePath)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Album.AlbumName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Album.AlbumName)
            </dd>
        </dl>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.SongId }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
</body>
</html>
