@model MusicWeb.Models.Song

@{
    ViewBag.Title = "Delete";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        /* General styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            margin: 0;
            padding: 0;
        }

        h2, h3 {
            text-align: center;
            color: #dc3545; /* Red for warning */
        }

        .delete-container {
            background: #ffffff;
            padding: 20px;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 30px auto;
        }

        dl {
            display: flex;
            flex-wrap: wrap;
            margin: 0;
            padding: 0;
        }

        dt, dd {
            width: 50%;
            margin: 0;
            padding: 8px 0;
        }

        dt {
            font-weight: bold;
            color: #495057;
        }

        dd {
            color: #6c757d;
        }

        .form-actions {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .btn-default {
            background-color: #dc3545;
            color: white;
        }

            .btn-default:hover {
                background-color: #b02a37;
            }

        a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
            margin-left: 10px;
        }

            a:hover {
                color: #0056b3;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h2>Delete Song</h2>
    <h3>Are you sure you want to delete this?</h3>

    <div class="delete-container">
        <h4>Song Information</h4>
        <hr />
        <dl>
            <dt>
                @Html.DisplayNameFor(model => model.SongName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.SongName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.FilePath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FilePath)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ImagePath)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ImagePath)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Album.AlbumName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Album.AlbumName)
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions">
                <input type="submit" value="Delete" class="btn btn-default" />
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
