@{
    ViewBag.Title = "User Profile";
}

<div class="container mt-5">
    <!-- Tiêu đề -->
    <h2 class="text-center text-primary mb-4">User Profile</h2>

    <!-- Thông tin người dùng -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Welcome, <span class="text-info">@ViewBag.Name</span></h5>
            <p><strong>Email:</strong> @ViewBag.Email</p>
        </div>
    </div>

    <!-- Thành tích -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h4 class="card-title text-success">Your Achievements</h4>

            @if (ViewBag.Achievements != null && ViewBag.Achievements.Count > 0)
            {
                <ul class="list-group list-group-flush mt-3">
                    @foreach (var achievement in ViewBag.Achievements)
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <i class="bi bi-award-fill text-warning me-3" style="font-size: 1.5rem;"></i>
                            <span>@achievement</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="mt-3 text-muted">No achievements unlocked yet.</p>
            }
        </div>
    </div>
</div>
